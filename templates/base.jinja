{# Login hidden window put in the base to be called from every page if needed. #}
    <div id="id01" >
        <form  action="/login" method="POST">
            <div class='login-box'>
                <span id="close-window">x</span>
                <label for="email"><b>email</b></label>
                <input type="text" placeholder="enter email" name="e-mail" required>

                <label for="psw"><b>password</b></label>
                <input type="password" placeholder="enter password" name="psw" required>
                    
                <button type="submit" class="button">Login</button>
                
                <button class="button" id="signup-button">sign up</button>
                
            </div>
        </form>
    </div>
{# Sign up hidden window put in the base to be called from every page if needed.  #}
    <div id="signup-window" >
        <form action="/signup" method="POST">
            {# using same classname as login box since it's using the same css settings #}
            <div class='login-box'>
                <span id="signup-close-window">x</span>
                <label for="uname"><b>username</b></label>
                <input type="text" placeholder="enter username" name="uname" required>

                <label for="email"><b>email</b></label>
                <input type="text" placeholder="enter username" name="email" required>
            
                <label for="psw"><b>password</b></label>
                <input type="password" placeholder="enter password" name="psw" id="password" required>
                
                <label for="confirm-psw"><b>confirm password</b></label>
                <input type="password" placeholder="confirm password" name="confirm-psw" id="confirm-password" required>

                <button type="submit" class="button">Login</button>
                
            </div>
        </form>
    </div>
