{% extends "base.jinja" %}

{% block head %}
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../../static/css/tic-tac-toe_style.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/1.7.3/socket.io.min.js"></script>
    <script src="../../static/javascript/tic-tac-toe/tic-tac-toe_script.js" defer></script>
    <title>Tic-Tac-Toe</title>
{% endblock %}
    
{% block main %}
    <p id="header">||||||||   Tic  ||||||  Tac  ||||  Toe  ||</p>
    <div id="game-id">
        
    </div>
    <div id="boardAndPlayerInfo">
        <div id="playerInfo"></div>
        <div class="board" id="board">
            <div class="square" id="cell" data-cell="0"></div>
            <div class="square" id="cell" data-cell="1"></div>
            <div class="square" id="cell" data-cell="2"></div>
            <div class="square" id="cell" data-cell="3"></div>
            <div class="square" id="cell" data-cell="4"></div>
            <div class="square" id="cell" data-cell="5"></div>
            <div class="square" id="cell" data-cell="6"></div>
            <div class="square" id="cell" data-cell="7"></div>
            <div class="square" id="cell" data-cell="8"></div>
        </div>
    </div>
    <div id="chatBox">
            <input id="chatInput" placeholder="Type your message here..." onkeydown="search(this)"> 
            <button id="messageButton">send message</button>
            <p id="receiveMessage"></p>
    </div>
    <div id="room_full">
        <p> Room is full!</p>
    </div>
    </div>
    <div id="game-type">
        
        <input id="loginId" placeholder="What is your username" required = "required" name="user_name">
        <br>
        <button type="submit" id="start_new_game"> START A NEW GAME </button>
        <br>
        <input type="text" id="room_id" placeholder="Put Room Id Here">
        <button type="submit" id="join_a_game"> JOIN A GAME </button>
       
    </div>
    <div id="message">
        <div id="gameEnd"></div>
        <button id="restart">Restart</button>
    </div>
    
{% endblock %}
    
